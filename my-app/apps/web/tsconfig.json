{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@repo/schemas": ["../../packages/schemas/dist/index"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "global.d.ts",
    "src",
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["dist","node_modules"]
}
